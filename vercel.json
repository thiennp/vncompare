{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/public/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/public/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "apps/api/public/index.php"
    }
  ],
  "env": {
    "APP_ENV": "prod",
    "APP_DEBUG": "false"
  },
  "functions": {
    "apps/api/public/index.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "buildCommand": "cd apps/api && composer install --no-dev --optimize-autoloader",
  "outputDirectory": "apps/api/public"
}
