[build]
  base = "."
  publish = "dist/backoffice/browser"
  command = "npm run build --prefix apps/backoffice"

[build.environment]
  NODE_VERSION = "20.19.0"

# Angular runtime plugin disabled - not needed for static deployment

# SPA redirects for Angular
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# Security headers
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "SAMEORIGIN"
    X-Content-Type-Options = "nosniff"
    X-XSS-Protection = "1; mode=block"
    Referrer-Policy = "origin-when-cross-origin"

# Asset caching
[[headers]]
  for = "/assets/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"
