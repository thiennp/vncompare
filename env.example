# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/vncompare"
DIRECT_URL="postgresql://username:password@localhost:5432/vncompare"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Authentication
NEXTAUTH_URL="https://vncompare.com"
NEXTAUTH_SECRET="your-super-secret-key-here-minimum-32-characters"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# Zalo OAuth (for Vietnam)
ZALO_CLIENT_ID="your-zalo-client-id"
ZALO_CLIENT_SECRET="your-zalo-client-secret"

# External Services
ALGOLIA_APP_ID="your-algolia-app-id"
ALGOLIA_SEARCH_KEY="your-algolia-search-key"
ALGOLIA_ADMIN_KEY="your-algolia-admin-key"

CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"

# Email Service (Resend)
RESEND_API_KEY="your-resend-api-key"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Payment Gateways
VNPAY_TMN_CODE="your-vnpay-tmn-code"
VNPAY_HASH_SECRET="your-vnpay-hash-secret"
VNPAY_URL="https://sandbox.vnpayment.vn/paymentv2/vpcpay.html"

MOMO_PARTNER_CODE="your-momo-partner-code"
MOMO_ACCESS_KEY="your-momo-access-key"
MOMO_SECRET_KEY="your-momo-secret-key"

ZALOPAY_APP_ID="your-zalopay-app-id"
ZALOPAY_KEY1="your-zalopay-key1"
ZALOPAY_KEY2="your-zalopay-key2"

# Google Services
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn"
MIXPANEL_TOKEN="your-mixpanel-token"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-southeast-1"
AWS_S3_BUCKET="vncompare-assets"

# CDN
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="your-cloudflare-zone-id"

# Search Engine Verification
GOOGLE_SITE_VERIFICATION="your-google-verification-code"
BING_SITE_VERIFICATION="your-bing-verification-code"
YANDEX_SITE_VERIFICATION="your-yandex-verification-code"

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_PAYMENTS="true"
ENABLE_SEARCH="true"

# Development
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
